<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical"
    android:scrollbars="horizontal"
    tools:context=".ui.perfil.PerfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                style="@style/titulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/negro"
                android:fontFamily="@font/alata"
                android:text="@string/perfil"
                android:textSize="30dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:backgroundTint="@color/gris">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.65"
                        android:backgroundTint="@color/teal_700"
                        android:elevation="20dp"
                        android:scaleX="0.85"
                        android:scaleY="0.85">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iv_perfil"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/ic_dashboard_black_24dp" />

                            <ImageView
                                android:id="@+id/camara_small"
                                android:layout_width="46dp"
                                android:layout_height="48dp"
                                android:src="@drawable/cambiar_foto"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:foregroundGravity="center_vertical|center_horizontal"
                        android:orientation="vertical"

                        android:paddingHorizontal="12dp">


                        <TextView
                            android:id="@+id/textView11"
                            style="@style/titulos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="@string/nombre"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/teal_700"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/perfil_nombre"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/teal_700"
                                    android:fontFamily="@font/alata"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="10dp"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:scrollbars="horizontal"
                                    android:text="Nombre Apellido"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />

                            </HorizontalScrollView>


                        </LinearLayout>


                        <TextView
                            android:id="@+id/textView13"
                            style="@style/titulos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="@string/email"
                            android:textSize="20dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/teal_700"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/perfil_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/teal_700"
                                    android:fontFamily="@font/alata"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="20dp"
                                    android:text="ane@gmail.com"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />


                            </HorizontalScrollView>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="10dp">

                <Button
                    android:id="@+id/b_idioma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:background="@color/azul_oscuro"
                    android:drawableLeft="@drawable/baseline_language_24"
                    android:fontFamily="@font/alata"
                    android:paddingHorizontal="50dp"
                    android:text="@string/idiomas"
                    android:textSize="22dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cardCornerRadius="700dp">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/titulos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/negro"
                        android:fontFamily="@font/alata"
                        android:gravity="center"
                        android:text="@string/estadisticas"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/negro"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#f7f5f6"
                            app:cardBackgroundColor="@color/gris">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="20dp"

                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TV11"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:gravity="center"
                                    android:text="@string/fecha_union"
                                    android:textColor="@color/negro"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/tv_fechaUnion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:gravity="center"
                                    android:text="2023-05-07"
                                    android:textColor="@color/teal_700"
                                    android:textSize="30dp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                                <TextView
                                    android:id="@+id/tv_votos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:gravity="center"
                                    android:text="@string/participaciones"
                                    android:textColor="@color/negro"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/tv_num_votos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/teal_700"
                                    android:textSize="30dp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                                <TextView
                                    android:id="@+id/tv_publicadas"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:gravity="center"
                                    android:text="@string/publicadas"
                                    android:textColor="@color/negro"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/tv_num_publicadas"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/teal_700"
                                    android:textSize="30dp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:backgroundTint="#f7f5f6"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#f7f5f6"
                                android:src="@drawable/segmentation_pana" />

                        </androidx.cardview.widget.CardView>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>