<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Das_ProyectoGrupal_AneNaiaraMaite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_turquesa</item>
        <item name="colorPrimaryVariant">@color/azul_oscuro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/contraste</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/negro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titulos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/negro</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:font">@font/alata</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitulos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:font">@font/alata</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="subtitulos2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#505050</item>
        <item name="android:font">@font/alata</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="campos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_view_bg</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:font">@font/alata</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="opciones" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:font">@font/alata</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="preguntas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:font">@font/alata</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:paddingTop">10dp</item>
    </style>



</resources>